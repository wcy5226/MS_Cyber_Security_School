{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: 외부 터미널에서 실행",
            "type": "shell",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "&&",
                "start",
                "cmd",
                "/k",
                "chcp 65001 && ${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "컴파일 후 외부 터미널에서 실행합니다."
        }
    ]
}